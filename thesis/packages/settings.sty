% ============================================================================
% Document Settings
% ============================================================================
% This file contains document formatting, geometry, and bibliography settings

% ============================================================================
% Page Geometry
% ============================================================================
\geometry{
  a4paper,
  top=3cm,
  bottom=3cm,
  left=3.5cm,
  right=3.5cm,
  heightrounded,
  bindingoffset=5mm
}

% ============================================================================
% Bibliography Configuration
% ============================================================================
\usepackage[
  backend=biber,
  style=alphabetic,
  citestyle=alphabetic,
  uniquename=false,
  giveninits=true
]{biblatex}
\addbibresource{references.bib}

% ============================================================================
% Automatic Paragraph Formatting
% ============================================================================
% Remove paragraph indentation automatically
\setlength{\parindent}{0pt}
\setlength{\parskip}{6pt plus 2pt minus 1pt}
